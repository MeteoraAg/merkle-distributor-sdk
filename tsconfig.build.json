{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/cjs/",
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "scripts/**/*", "dist/**/*"]
}
